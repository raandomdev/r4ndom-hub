local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
-- Windowok
local Window = Rayfield:CreateWindow({
   Name = "R4ndom Hub",
   LoadingTitle = "R4ndom Hub",
   LoadingSubtitle = "by Sirius",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "R4ndomfile"
   },
   Discord = {
      Enabled = false,
      Invite = "[REDACTED]",
      RememberJoins = true
   },
   KeySystem = false,
   KeySettings = {
      Title = "R4ndom Hub",
      Subtitle = "Key System",
      Note = "Join the discord (discord.gg/[TBD])",
      FileName = "SiriusKey",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = "Hello"
   }
})

local Tab = Window:CreateTab("Home", 4483362458)
local Main = Window:CreateTab("Main", 4483362458)
local Automation = Window:CreateTab("Automation", 4483362458)

local SpeedInput = Tab:CreateInput({
   Name = "Set WalkSpeed",
   PlaceholderText = "Enter a number (16-100)",
   RemoveTextAfterFocusLost = false,
   Callback = function(Text)
       local value = tonumber(Text)
       if value then
           if value >= 16 and value <= 100 then
               local player = game.Players.LocalPlayer
               local char = player.Character or player.CharacterAdded:Wait()
               local humanoid = char:FindFirstChildOfClass("Humanoid")
               if humanoid then
                   humanoid.WalkSpeed = value
               end
           else
               Rayfield:Notify({
                   Title = "Invalid Speed",
                   Content = "Please enter a number between 16 and 100",
                   Duration = 4,
                   Image = 4483362458,
               })
           end
       else
           Rayfield:Notify({
               Title = "Not a Number",
               Content = "Please enter a valid number",
               Duration = 4,
               Image = 4483362458,
           })
       end
   end,
})